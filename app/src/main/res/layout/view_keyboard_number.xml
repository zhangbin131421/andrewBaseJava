        app:layout_constraintStart_toStartOf="@+id/tvNumber9"
        app:layout_constraintTop_toTopOf="@+id/tvNumber4" />

    <TextView
        android:id="@+id/tvNumber1"
        style="@style/TextStyleNumberItem"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/tvNumberDot"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/tvNumber7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tvNumber7"
        app:layout_constraintTop_toBottomOf="@+id/tvNumber4" />

    <TextView
        android:id="@+id/tvNumber2"
        style="@style/TextStyleNumberItem"
        android:text="2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/tvNumber8"
        app:layout_constraintStart_toStartOf="@+id/tvNumber8"
        app:layout_constraintTop_toTopOf="@+id/tvNumber1" />

    <TextView
        android:id="@+id/tvNumber3"
        style="@style/TextStyleNumberItem"
        android:text="3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/tvNumber9"
        app:layout_constraintStart_toStartOf="@+id/tvNumber9"
