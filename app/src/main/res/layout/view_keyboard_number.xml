    <TextView
        android:id="@+id/tvNumberDot"
        style="@style/TextStyleNumberItem"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/tvNumber7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tvNumber7"
        app:layout_constraintTop_toBottomOf="@+id/tvNumber1" />

    <TextView
        android:id="@+id/tvNumber0"
        style="@style/TextStyleNumberItem"
        android:text="0"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/tvNumber8"
        app:layout_constraintStart_toStartOf="@+id/tvNumber8"
        app:layout_constraintTop_toTopOf="@+id/tvNumberDot" />

    <TextView
        android:id="@+id/tvNumberDel"
        style="@style/TextStyleNumberItem"
        android:text="del"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/tvNumber9"
        app:layout_constraintStart_toStartOf="@+id/tvNumber9"
        app:layout_constraintTop_toTopOf="@+id/tvNumberDot" />

